<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Event">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/white"
            >


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_home_24"
                android:backgroundTint="#FFFFFF"
                android:layout_marginRight="10dp"
                android:id="@+id/home"

                >

            </ImageButton>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_people_alt_24"
                android:id="@+id/friend"
                android:backgroundTint="#FFFFFF"
                android:layout_marginRight="10dp"
                >

            </ImageButton>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_business_center_24"
                android:backgroundTint="#FFFFFF"
                android:id="@+id/jobSite"
                android:layout_marginRight="10dp"
                >

            </ImageButton>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_event_24"
                android:backgroundTint="#FFFFFF"
                android:id="@+id/event"
                android:layout_marginRight="10dp"
                >

            </ImageButton>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_notifications_24"
                android:backgroundTint="#FFFFFF"
                android:id="@+id/notification"
                android:layout_marginRight="10dp"
                >

            </ImageButton>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_menu_24"
                android:backgroundTint="#FFFFFF"
                android:id="@+id/menu"

                >

            </ImageButton>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up Coming Events..."
            android:textColor="#5E5959"
            android:textSize="30dp"


            >

        </TextView>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_circle_outline_24"
            android:backgroundTint="#FFFFFF"
            android:id="@+id/addEvent"

            >

        </ImageButton>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/eventRecycler"
            >

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>


</LinearLayout>